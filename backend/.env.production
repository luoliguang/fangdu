# 生产环境变量
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# 数据库配置（生产环境需要设置实际值）
DB_HOST=your-production-db-host
DB_PORT=3306
DB_USERNAME=your-production-db-username
DB_PASSWORD=your-production-db-password
DB_DATABASE=fangdu_prod

# JWT配置（生产环境必须使用强密钥）
JWT_SECRET=your-very-secure-secret-key-for-production
JWT_EXPIRES_IN=24h
SECRET_TOKEN=your-production-secret-token

# 上传配置
MAX_FILE_SIZE=10485760
UPLOAD_DIR=/var/uploads

# 分页配置
DEFAULT_LIMIT=10
MAX_LIMIT=100

# 日志配置
LOG_LEVEL=info
LOG_DIR=/var/log/fangdu

# CORS配置
CORS_ORIGIN=https://your-production-domain.com

# Redis配置（生产环境缓存）
REDIS_HOST=your-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# 阿里云 OSS 配置（生产环境）
ALI_OSS_ACCESS_KEY_ID=your-production-oss-key-id
ALI_OSS_ACCESS_KEY_SECRET=your-production-oss-key-secret
ALI_OSS_BUCKET=your-production-oss-bucket
ALI_OSS_REGION=oss-cn-guangzhou