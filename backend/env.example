# 环境配置
NODE_ENV=development
PORT=3002
HOST=localhost

# 数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=
DB_DATABASE=fangdu_dev

# JWT配置
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=24h

# 访问令牌
SECRET_TOKEN=your-super-secret-token-here

# 管理员账号配置
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-admin-password-here
USER_USERNAME=user
USER_PASSWORD=your-user-password-here

# 上传配置
MAX_FILE_SIZE=52428800
UPLOAD_DIR=./uploads
# 注释：MAX_FILE_SIZE单位为字节，52428800 = 50MB

# 分页配置
DEFAULT_LIMIT=10
MAX_LIMIT=100

# 日志配置
LOG_LEVEL=info

# CORS配置
CORS_ORIGIN=http://localhost:5173

# 阿里云 OSS 配置
ALI_OSS_ACCESS_KEY_ID=your-oss-access-key-id
ALI_OSS_ACCESS_KEY_SECRET=your-oss-access-key-secret
ALI_OSS_BUCKET=your-oss-bucket-name
ALI_OSS_REGION=oss-cn-guangzhou